
<%= form_with model: flat do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>
<div class="form-group">
  <%= f.label :price_per_night %>
  <%= f.number_field :price_per_night %>
</div>
<div class="form-group">
  <%= f.label :number_of_guests %>
  <%= f.number_field :number_of_guests %>
</div>
<%= f.submit %>
<% end %>
